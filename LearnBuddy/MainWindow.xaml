<Window x:Class="LearnBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnBuddy"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" d:DesignHeight="1200" d:DesignWidth="1920">

    <TabControl>
        <TabItem Name="Dashboard_Private" Header="Dashboard" FontSize="30" Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="400"/>
                    <RowDefinition/>
                    <RowDefinition Height="400"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Label Content="Welcome To Dashboard" FontSize="90" HorizontalAlignment="Center" FontWeight="Bold" Margin="10,30" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>

                <Button x:Name="btn_Registration_Dashboard" Content="Registration" Grid.Row="1" Grid.Column="1" Margin="50,60"
            Background="#007ACC" Foreground="White" FontSize="90" FontWeight="Bold" Cursor="Hand"/>

                <Button x:Name="btn_Login_Dashboard" Content="Login" Grid.Row="1" Grid.Column="2" Margin="50,60"
            Background="#FF5722" Foreground="White" FontSize="90" FontWeight="Bold" Cursor="Hand"/>
            </Grid>
        </TabItem>

        <TabItem Name="Login_Private" Header="Login" FontSize="30" Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btn_Logout_Login" Content="Back" HorizontalAlignment="Left" Width="300" Height="90" Margin="10" FontSize="60"/>

                <StackPanel Grid.Row="1" Margin="0,30" VerticalAlignment="Center">
                    <Label Content="Username" HorizontalAlignment="Center" Width="800" FontSize="60"/>
                    <TextBox x:Name="btn_Username_Login" HorizontalAlignment="Center" Width="800" FontSize="60" Margin="0,0,0,60"/>
                    <Label Content="Passwort" Grid.Row="1" HorizontalAlignment="Center" Width="780" Margin="0,30,0,0" FontSize="60"/>
                    <PasswordBox x:Name="btn_Passwort_Login" Grid.Row="1" HorizontalAlignment="Center" Width="800" FontSize="60"/>
                </StackPanel>
            </Grid>
        </TabItem>

        <TabItem Name="Dashboard_Tutor_Private" Header="Tutor" FontSize="30" Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="130"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Content="Welcome Tutor" HorizontalAlignment="Center" FontSize="80" Margin="0,5,0,15"/>

                <Button x:Name="btn_Logout_Tutor" Grid.Row="0" HorizontalAlignment="Right" Width="300" Margin="15" Content="Logout" FontSize="60"/>

                <ComboBox x:Name="cb_Options_Tutor" Grid.Row="1" HorizontalAlignment="Center" Width="900" FontSize="90" Margin="0,0,0,5">
                    <ComboBoxItem Content="Nachhilfe Ansicht"/>
                    <ComboBoxItem Content="Tutoren"/>
                </ComboBox>

                <DataGrid x:Name="dg_ShowTutoring_Private" Grid.Row="2" Margin="10,15,10,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Fach" Binding="{Binding Fach}" Width="220"/>
                        <DataGridTextColumn Header="Beschreibung" Binding="{Binding Beschreibung}" Width="1300"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="166"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

        <TabItem Name="Admin" Header="Admin" Visibility="Visible" FontSize="30">
            <Grid x:Name="AdminMenu">
                <Grid.RowDefinitions>
                    <RowDefinition Height="130"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <Label Content="Welcome Admin" HorizontalAlignment="Center" FontSize="80" Margin="0,5,0,15"/>

                <Button x:Name="btn_Logout_Admin" Grid.Column="1" HorizontalAlignment="Right" Width="300" Margin="15" Content="Logout" FontSize="60"/>
                
                <ComboBox x:Name="cb_Options_Admin" Grid.Row="1" HorizontalAlignment="Center" Width="900" FontSize="90" Margin="0,0,0,5">
                    <ComboBoxItem Content="Nachhilfe Ansicht"/>
                    <ComboBoxItem Content="Tutoren"/>
                    <ComboBoxItem Content="Tutoren"/>
                </ComboBox>

                <DataGrid x:Name="dt_Output" Grid.Row="2" Margin="10" Background="#88ac8c" IsReadOnly="False" CanUserAddRows="False" ColumnWidth="*" FontSize="30   "/>

                <Grid Grid.Row="2" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Button x:Name="btn_EditEntry" Content="Einträge verwalten" Grid.Row="0" FontSize="20" Margin="10,20" Background="#f79e1b" Click="btn_EditEntry_Click" Cursor=""/>
                    <Button x:Name="btn_AcceptTutor" Content="Tutor Akzeptieren" Grid.Row="1" FontSize="20" Margin="10,20" Background="#f79e1b" Click="btn_AcceptTutor_Click"/>
                    <Button x:Name="btn_TutorDecline" Content="Tutor Ablehnen" Grid.Row="2" FontSize="20" Margin="10,20" Background="#f79e1b" Click="btn_TutorDecline_Click"/>
                    <Button x:Name="btn_BlockStudent" Content="Schüler Sperren" Grid.Row="3" FontSize="20" Margin="10,20" Background="#f79e1b" Click="btn_BlockStudent_Click"/>
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
